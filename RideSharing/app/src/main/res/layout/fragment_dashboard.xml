<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:tag="dashboardFragment"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:padding="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/rounded_corners"
                >
                <TextView
                    android:id="@+id/profileCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:paddingStart="35dp"
                    android:text="@string/tvProfileCardTitle"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    ></TextView>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    app:layout_constraintTop_toBottomOf="@id/profileCardTitle"
                    app:layout_constraintStart_toStartOf="@id/profileCard"
                    app:layout_constraintEnd_toEndOf="@id/profileCard"
                    >
                </com.google.android.material.divider.MaterialDivider>
                <TextView
                    android:id="@+id/profileCardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:text="@string/welcome_message_PH"
                    app:layout_constraintTop_toBottomOf="@id/profileCardTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/numberOfTrips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:text="@string/trips_info_PH"
                    app:layout_constraintTop_toBottomOf="@id/profileCardName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/welcomePanelBottomDivider"
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    app:layout_constraintTop_toBottomOf="@id/numberOfTrips"
                    app:layout_constraintStart_toStartOf="@id/profileCard"
                    app:layout_constraintEnd_toEndOf="@id/profileCard"
                    />
                <Button
                    android:id="@+id/profileCardButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/buttonsText"
                    android:backgroundTint="@color/accent"
                    app:layout_constraintTop_toBottomOf="@id/welcomePanelBottomDivider"
                    app:layout_constraintStart_toStartOf="@id/profileCard"
                    app:layout_constraintEnd_toEndOf="@id/profileCard"
                    app:layout_constraintBottom_toBottomOf="@id/profileCard"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/go_to_profile_card_button"
                    >
                </Button>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tripsCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/rounded_corners"
                >
                <TextView
                    android:id="@+id/tripsCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:paddingStart="35dp"
                    android:text="@string/tripsCardTitle"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    app:layout_constraintTop_toBottomOf="@id/tripsCardTitle"
                    app:layout_constraintStart_toStartOf="@id/tripsCard"
                    app:layout_constraintEnd_toEndOf="@id/tripsCard"
                    >
                </com.google.android.material.divider.MaterialDivider>
                <TextView
                    android:id="@+id/tripsCardText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="16dp"
                    android:text="@string/dashboard_tv_recent_trips_placeholder"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tripsCardTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <Button
                    android:id="@+id/tripsCardButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/buttonsText"
                    android:backgroundTint="@color/accent"
                    app:layout_constraintTop_toBottomOf="@id/tripsCardText"
                    app:layout_constraintStart_toStartOf="@id/tripsCard"
                    app:layout_constraintEnd_toEndOf="@id/tripsCard"
                    app:layout_constraintBottom_toBottomOf="@id/tripsCard"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/trip_history_card_button"
                    >
                </Button>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>