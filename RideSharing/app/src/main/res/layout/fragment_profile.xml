<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:padding="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profilePage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/rounded_corners"
                >
                <TextView
                    android:id="@+id/profilePageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:paddingStart="35dp"
                    android:text="@string/tv_Profile_title"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <ImageView
                    android:id="@+id/avatarImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corners"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp"
                    android:src="@drawable/baseline_face_24"
                    app:layout_constraintTop_toBottomOf="@id/profilePageTopDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/buttonsText" />
                <Button
                    android:id="@+id/profilePageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/avatarImage"
                    app:layout_constraintStart_toStartOf="@id/profilePage"
                    app:layout_constraintEnd_toEndOf="@id/profilePage"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/buttonsText"
                    android:backgroundTint="@color/accent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/edit_profile_card_button"
                    android:layout_marginBottom="90dp"
                    >
                </Button>
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/profilePageTopDivider"
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    app:layout_constraintTop_toBottomOf="@id/profilePageTitle"
                    app:layout_constraintStart_toStartOf="@id/profilePage"
                    app:layout_constraintEnd_toEndOf="@id/profilePage"
                    >
                </com.google.android.material.divider.MaterialDivider>
                <TextView
                    android:id="@+id/profilePageInfoLastUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/profile_info_last_updated_on"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoFullNameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="14dp"
                    android:text="@string/edit_profile_full_name_title"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoLastUpdate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageFullNameData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoFullNameTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoBirthdateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="14dp"
                    android:text="@string/edit_profile_birthdate_title"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageFullNameData"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoBirthdateData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoBirthdateTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoPhoneTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="14dp"
                    android:text="@string/edit_profile_phone_number_title"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoBirthdateData"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoPhoneData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoPhoneTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoEmailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="14dp"
                    android:text="@string/edit_profile_email_address_title"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoPhoneData"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoEmailData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoEmailTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoIsPremiumTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="14dp"
                    android:text="@string/premium_user_title"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoEmailData"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/profilePageInfoIsPremium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/profilePageInfoIsPremiumTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>